<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lithium.community.android.sdk">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".auth.LiAuthReceiverActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="com.lithium.community"  android:host="oauth2callback" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LiLoginActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <service
            android:name=".notification.LiFirebaseMessagingService"
            android:isolatedProcess="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
